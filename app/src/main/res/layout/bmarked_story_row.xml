<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/bmarkedStoryImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/storyleadicon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/bmarkedStoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="This is a sample headline and is only meant as a representation"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/bmarkedStoryImage"
        android:layout_centerVertical="true"/>

</RelativeLayout>