<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp"
    android:paddingTop="16dp"
    android:id="@+id/bmarkedStoryRow">

    <ImageView
        android:id="@+id/bmarkedStoryImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/storyleadicon"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="320dp"
        android:src="@drawable/close_icon_fore"
        android:id="@+id/storyDelete"
       />

    <TextView
        android:id="@+id/bmarkedStoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/bmarkedStoryImage"
        android:layout_centerVertical="true"/>

</RelativeLayout>