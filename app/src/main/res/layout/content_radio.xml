<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.Radio"
    tools:showIn="@layout/activity_radio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/wfiuOne"
                android:clickable="true"
                android:onClick="wfiuOnePlayClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/radioicon"
                android:contentDescription="@string/place_holder" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/stationName"
                android:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="215dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="wfiuOnePlayClick"
                android:layout_weight=".25"
                android:layout_marginBottom="10dp"
                android:tag="@string/radioPlayState"
                android:contentDescription="@string/place_holder"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/radioPlayButton"
                android:clickable="true"
                android:onClick="wfiuOnePlayClick"
                android:layout_weight=".25"
                android:layout_gravity="center"
                android:tag="@string/radioPlayState"
                android:src="@drawable/play_icon"
                android:contentDescription="@string/place_holder"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:id="@+id/radioNextButton"
                android:clickable="true"
                android:layout_weight=".18"
                android:layout_gravity="center"
                android:onClick="radioNextButton"
                android:background="@drawable/next_icon"
                android:contentDescription="@string/place_holder"
                />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight=".25"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/place_holder"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitList">
