<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/leadImageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/leadImage"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_gravity="top"
                    android:background="@mipmap/dummyicon"
                    android:contentDescription="@string/place_holder"
                    android:onClick="onStoryImageClick" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="270dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/twitIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight=".20"
                    android:background="@mipmap/twiticon"
                    android:contentDescription="@string/place_holder" />



                <ImageView
                    android:id="@+id/fbIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight=".25"
                    android:background="@mipmap/fbicon"
                    android:contentDescription="@string/place_holder" />



                <ImageView
                    android:id="@+id/bookmarkIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight=".25"
                    android:background="@mipmap/bookmarkicon"
                    android:contentDescription="@string/place_holder"
                    android:onClick="onBookmarkClick" />



                <ImageButton
                    android:id="@+id/shareIcon"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight=".25"
                    android:background="@mipmap/shareicon"
                    android:contentDescription="@string/place_holder"
                    android:onClick="onStoryShareClick" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="330dp"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/second_story_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/third_story_title" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp">

            <VideoView
                android:id="@+id/videoStory"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="400dp" />


        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>